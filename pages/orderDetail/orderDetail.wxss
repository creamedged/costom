.orderAttr{overflow: hidden; text-align: right; background: #fff; position: fixed; bottom:0px; left:0px; right:0px; height: 110rpx; padding:0 20rpx; box-shadow: 0 2rpx 15rpx #e7e7e7}
.orderAttr .ok{ color: #fff; border-radius:54rpx; display: inline-block; margin-top:29rpx; font-size:24rpx; background:#ff9e05;   height: 54rpx; line-height: 54rpx; width:147rpx; padding:0px;}
.orderAttr .okAlgin{color: #ff9e05; border-radius:54rpx; display: inline-block; margin-top:29rpx; font-size:24rpx; border:1rpx solid #ffcf82;  width:147rpx; height: 54rpx; line-height: 54rpx; background: #fff; padding:0px;}
.orderAttr .cancel{ color: #333; border-radius:54rpx; background:#fff; display: inline-block; height:54rpx; line-height: 54rpx; border:1px solid #c6c6c6; font-weight: normal; font-size:24rpx;} 
