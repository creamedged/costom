.orderNews .content{overflow: hidden;}
.orderNews .content .orderNum{color:#939393; font-size:24rpx; padding:0 20rpx; height: 60rpx; line-height: 60rpx;}
.orderNews .content .orderNum .orderStatus{float:right;}

.product{overflow: hidden; position: relative; padding:20rpx; background:#f9f9f9}
.product image{width:180rpx; height: 180rpx; float: left;}
.product .news{margin-left:200rpx; position: relative; height: 180rpx;}
.product .news .name{font-size:28rpx; color:#333333; }
.product .news .price{position: absolute; bottom:0px;}
.product .news .price .priceStyle{font-size:40rpx; color:#ff3b30;}
.product .news .price .oldPrice{font-size:14rpx; text-decoration: line-through; color:#939393; display: inline-block; margin-left:15rpx;}
.product .news .price .oldPrice text{font-size:24rpx;}
.product .news .couponStyle{border:1rpx solid #bcdaf7; padding:0 10rpx; float:left; font-size:18rpx; color:#939393;}
.product .more{position:absolute; right:30rpx; top:45rpx; width:30rpx; height: 30rpx; }
.content .time_address{overflow: hidden; font-size:26rpx; padding:10rpx 30rpx;}
.content .time_address .title{color:#727171; float:left}
.content .time_address .time{color:#000000; margin-left:130rpx;display: block; text-align: left;}


.orderDetail{margin-top:20rpx; background: #fff; padding-bottom:40rpx} 
.orderDetail .header{ padding:28rpx 30rpx; font-size:36rpx; border-bottom:2px solid #ddd; margin-bottom:20rpx;}

.orderDetail .item{overflow:hidden; padding:37rpx 25rpx; border-bottom:1rpx solid #f2f2f2}
.orderDetail .item .title{color:#333333; font-size:28rpx; float:left; width:152rpx;}
.orderDetail .item .price{color:#939393; font-size:28rpx; margin-left:152rpx;}
