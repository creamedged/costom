/**index.wxss**/
.container{padding:0px; margin: 0px!important;}
.indexLocation{position: absolute; left:10rpx; top:52rpx; height: 48rpx; padding:0 10px 0 15rpx; line-height: 48rpx; z-index: 999; color: #fff;background-color:rgba(0,0,0,0.2);font-size:28rpx;border-radius:40rpx;}
.indexLocation image{ float:left; width:23rpx; height: 26rpx; margin-top:10rpx; margin-right:10rpx;}
.banner{width:100%; position:relative;}
.banner image{width: 100%; background: #000; height: 100%}

/*推荐*/
.assort{margin-top:12rpx; position: relative; padding-top:18rpx; overflow: hidden; padding-bottom:7rpx;}
.assort .label{position: absolute; top:0px; left:0px; width:160rpx; height:60rpx;z-index: 100;}
.assort .label image{width:100%; height: 100%;}
.assort .label text{ position: absolute; left:20rpx;top:0px; bottom:0px; right:0px;font-size:28rpx; color:#fff; line-height: 60rpx;}
.assort .list{width:756rpx; overflow: hidden;}
.assort .item{width:246rpx; height: 246rpx; position: relative; float:left; margin-right:6rpx;}
.assort .item view{width:100%; height:50rpx; font-size:24rpx; color:#fff; text-align: center; line-height: 50rpx; background-color:rgba(0,0,0,0.5); position: absolute; bottom:0px;}
.assort .item image{width:246rpx; height: 246rpx;}

.swipe-btn-wrapper{position: absolute; z-index: 100; bottom:20rpx; width: 100%}
.swipe-btn-wrapper .swipe-btn-list{text-align: center}
.swipe-btn-wrapper .swipe-btn-list view{display: inline-block;  width:15rpx; height: 15rpx; margin:0 7rpx;}

