/* pages/skuDetail/skuDetail.wxss */
@import "../../wxParse/wxParse.wxss";
.container{background:#fff; padding-bottom:100rpx;}
.skuImg{width:100%;overflow: hidden; display: block; height: 510rpx;}
.head{background: #fff; overflow: hidden; padding:40rpx 20rpx; position: relative;}
.head .title{font-size:40rpx; color:#444444; font-weight:bold}
.head .order{position: absolute; right:30rpx; bottom:45rpx; color:#939393; font-size:24rpx;}
.head .order text{color:#ff9e05; font-size:28rpx;}

.skuNote{background: #fff; padding:0 20rpx 50rpx; color:#707070; font-size:32rpx; word-break: break-all;word-wrap: break-word;white-space: pre-wrap}
.productPrice{margin-bottom:30rpx;background:#fff; padding:0 20rpx; overflow: auto;}
.productPrice .leftPrice{color:#f64755; font-size:60rpx; float:left; fong-weight:bold}
.productPrice .rightPrice{font-size:42rpx; color:#a3a3a3;text-decoration: line-through;float:left; margin:20rpx 0 0 20rpx;}
.productPrice .leftPrice text{font-size:23rpx;color:#939393}
.productPrice .rightPrice text{font-size:23rpx;}

/*优惠券  */
.couponList{background: #fff; padding:50rpx 20rpx 20rpx; overflow: hidden;}
.couponList .item{position: relative; width:200rpx; height: 92rpx; margin-right:15rpx; float:left;}
.couponList .item image{width:200rpx; height: 92rpx;}
.couponList .item .content{position: absolute; color:#fff; left:0px; right:0px; top:0px; bottom:0px;}
.couponList .item .content .left{width:145rpx;text-align: center;display:inline-block}
.couponList .item .content .left .price{font-size:50rpx; line-height: 50rpx; margin-top:10rpx;font-weight:bold}
.couponList .item .content .left .priceNote{font-size:18rpx;}
.couponList .item .content .right{float:right; font-size:18rpx; width:30rpx;  line-height: 32rpx; margin-top:15rpx; color:#fff;word-break: break-all;word-wrap: break-word;white-space: pre-wrap; padding-right:9rpx;}
.couponList .item .content .right1{float:right; font-size:18rpx; width:30rpx;  line-height: 22rpx; margin-top:15rpx; color:#fff;word-break: break-all;word-wrap: break-word;white-space: pre-wrap; padding-right:9rpx;}

.skuService{overflow: hidden; background: #fff; padding:30rpx 20rpx; background:#fafafa; border-bottom:1rpx solid #eeeeee}
.skuService text{font-size:30rpx; color:#000; float:left;}
.skuService .selecteItem{float:right; color:#999; margin-right:15rpx;}
.skuService image{ float:right; width:21rpx; height: 21rpx; margin-top:5px; margin-left:10rpx;}
.serverImg image{float:left;}

.skuStandard,.skuflow,.skuTip{overflow: hidden; background: #fff; padding:30rpx; margin-top:22rpx}
.skuStandard .title,.skuflow .title,.skuTip .title{font-size:40rpx; color:#727171; border-bottom:1px solid #c7c7cc; padding-bottom:30rpx;}
.skuStandard .item,.skuTip .item{color:#727171; font-size:26rpx;position: relative; padding-left:30rpx;margin-top:20rpx;}
.skuStandard .item .dot,.skuTip .item .dot{background:#00a0e9; width:10rpx; height: 10rpx; border-radius:50%; position:absolute; left:0rpx; top:50%; margin-top:-5rpx;}
.skuflow .flowBox{overflow: hidden;}
.skuflow .flowItem{text-align: center; width:50%; display: inline-block; margin-top:38rpx;}
.skuflow .flowItem image{width:250rpx; height: 250rpx; display: block; margin:0 auto}
.skuflow .flowItem text{padding-top:30rpx; display: block;}
.skuTip{padding-bottom:130rpx;}
.btn_Price{ height:80rpx; background:#fff; padding:30rpx; position:fixed; right:0px; left:0rpx; bottom:0px; overflow: hidden; }
.btn_Price .submit{background:#4396e9; border:none; color:#fff; height:80rpx; line-height:80rpx; font-size:28rpx; float:right; width:100%; border-radius:15rpx;}
.fnFasl {height:700rpx;}
.sheetTitle{ position: relative; height: 200rpx; padding:0 20rpx; border-bottom:1rpx solid #f3f3f3; margin-bottom:10rpx;}
.sheetTitle .sheetContent{position: absolute; top:-30rpx; z-index: 200; width: 100%}
.sheetTitle .imgIcon{width:200rpx; height: 200rpx; overflow: hidden;border-radius:15rpx; float:left;}
.sheetTitle .imgIcon image{width:200rpx; height: 200rpx;}
.sheetTitle .titlePrice{position: absolute; bottom:0px; margin-left:225rpx;}
.sheetTitle .titlePrice .price{color:#ff3b30; font-size:40rpx; display: block;}
.sheetTitle .titlePrice .title{color:#808080; font-size:24rpx; display: block;}
.cancel{height: 200rpx; background:#00a0e9; color:#fff; margin:0px; padding:0px;}
.dItem{ border:1px solid #d8d8d8; position:static; font-size:24rpx; color:#333333; display: block; float:left;padding:10rpx 18rpx; border-radius: 10rpx; margin-right:20rpx; margin-top:20rpx;}
.active{border:1px solid #00a0e9; background: none; color:#0f83f2}
.skuBtn{height: 80rpx; background:#4396e9; color:#fff; margin:0rpx 30rpx 30rpx; padding:0px; position: fixed; bottom:0px; left:0px; right: 0rpx; text-align: center; line-height: 80rpx; border-radius: 15rpx;font-size:28rpx}
.typeNoData{padding-bottom:50rpx; padding-top:0px;}
.typeNoData image{width:220rpx; height:170rpx;}
.typeNoData text{font-size:30rpx;}
.skuError{color:#f00; text-align: center; font-size:26rpx;padding:5rpx 0; width:100%;}

.describeNav{overflow: hidden; position: fixed; top:64px; left:0px; right:0rpx; z-index: 100; background:#fff; text-align: center; border-top:1rpx solid #e7e7e7;box-shadow: 0 1px 3px #f1f1f1}
.describeNav view{padding:20rpx 0;display: inline-block;  margin:0 30rpx;font-size:24rpx; color:#000}
.describeNav .selected{color:#0f83f2; border-bottom:6rpx solid #6fb5f7; }

.describe{overflow: hidden;}
.describe .title{height: 42rpx; font-size:46rpx; line-height: 46rpx; margin-top:120rpx;}
.describe .title .line{height: 42rpx; width:24rpx; background:#9ac6fa; display: block; float:left; margin-right:20rpx;}
.describe .title .name{float:left;}
.describe .content{text-align: center; margin-top:120rpx;  padding:0 20rpx;}
.describe .content image {width:100%; display: block;}
 page{height: 80%;} 
.scr{position: relative;height: 100%;padding-bottom:140rpx; padding-top:64px;white-space: nowrap}
.src view{display:inline-block}
.top {width:60rpx;height:60rpx; position: fixed;right:50rpx;bottom:215rpx;}